/**index.wxss**/

.bluebutterfly, .me {
  width: 100%;
  height: 45%;
  text-align: center;
  vertical-align: middle;
  position: relative;
}

.head-img {
  width: 350rpx;
  height: 350rpx;
  margin: 75rpx;
  border-radius: 50%;
}

.bluebutterfly {
  background-color: #4a82e5;
}

.me {
  background-color: #3ca059;
}

.breakline {
  height: 10%;
  font-size: 1em;
  position: relative;
}

.breakline text {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 60%;
  height: 30%;
  margin: auto;
}

.score {
  position: absolute;
  top: 20%;
  left: 65%;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  margin: auto;
  background-color: red;
  color: white;
}

.score text {
  line-height: 80rpx;
}
