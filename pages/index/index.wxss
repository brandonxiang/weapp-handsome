/**index.wxss**/



.bluebutterfly, .me {
  width: 100%;
  height: 45%;
  text-align: center;
  vertical-align: middle;
}

.head-img {
  width: 350rpx;
  height: 350rpx;
  margin: 75rpx;
  border-radius: 50%;
}

.bluebutterfly {
  background-color: blue;
}

.me {
  background-color: red;
}



.breakline {
  height: 10%;
  font-size: 1em;
  position: relative;
}

.breakline text {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 60%;
  height: 30%;
  margin: auto;
}
